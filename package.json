{
  "name": "BadMail",
  "version": "0.0.3",
  "description": "Destroys your mail",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron ./",
    "help": "electron-packager --help",
    "package:linux": "electron-packager ./ --name=BadMail --electron-version=1.8.1 --overwrite --icon=icon.png --platform=linux --arch=x64 --out=./releases",
    "debian": "electron-installer-debian --src=./releases/BadMail-linux-x64 --electron-version=1.8.1 --overwrite --icon=icon.png --arch=amd64 --dest=./releases ",
    "build:linux": "npm run package:linux && npm run debian"
  },
  "author": "Raymond",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "electron": "^1.8.1",
    "electron-installer-debian": "^0.7.1",
    "electron-packager": "^9.1.0",
    "jquery": "^3.2.1"
  }
}
